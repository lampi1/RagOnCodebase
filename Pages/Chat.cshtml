@page
@model ChatModel


<div style="width: 100%; display: flex; justify-content: center; align-items: center;">
    <div
        style="width: 100%; max-width: 600px; background-color: #f9f9f9; padding: 20px; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
        <ul style="list-style-type: none; padding: 0; font-family: Arial, sans-serif; font-size: 16px;">
            @foreach (var message in Model.ChatHistory)
            {
                <li style="margin-bottom: 15px; padding: 10px; border-radius: 5px; 
                           background-color: @(message.Role == "Utente" ? "#007bff" : "#e0e0e0"); 
                           color: @(message.Role == "Utente" ? "#fff" : "#333");">
                    <strong>@message.Role:</strong> @message.Content
                </li>
            }
        </ul>
    </div>
</div>
<form method="post" style="display: flex; flex-direction: column; align-items: center; margin-top: 20px;">
    <label for="UserInput" style="font-family: Arial, sans-serif; font-size: 16px; color: #555; margin-bottom: 10px;">
        Scrivi un messaggio:
    </label>
    <input type="text" id="UserInput" placeholder="Spiegami il ChatService..." name="UserInput"
        style="width: 100%; max-width: 500px; padding: 10px; font-size: 16px; border: 1px solid #ccc; border-radius: 5px; margin-bottom: 10px;"
        required />
    <button type="submit"
        style="padding: 10px 20px; font-size: 16px; color: #fff; background-color: #007bff; border: none; border-radius: 5px; cursor: pointer;">
        Invia
    </button>
</form>
